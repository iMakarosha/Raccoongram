                    <span>by: <a href="/Home/AuthorProfile/@ViewBag.BackAuthorHref" target="_blank">@ViewBag.BackAuthor - </a></span>
                }
                <span class="navbar-right">@ViewBag.likes <i class="fa fa-heart-o"></i></span>
            </p>

        </div>*@
</section>

