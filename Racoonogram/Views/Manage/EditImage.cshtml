@model Racoonogram.Models.ImageUnload

@using (Html.BeginForm("SaveImageChanges", "Manage", FormMethod.Post, new { @class = "form-horizontal" }))
{
        @Html.AntiForgeryToken()
        <div class="col-sm-4">
            <img src="@Model.Url" onerror="this.src='/Content/Images/notFound.jpg'" alt="logo" id="logo-img"  @*style="object-fit:cover;border-radius:50%;border:1px solid #333;padding: 3px;"*@ />
        </div>
@Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "hidden" } })
<div class="col-sm-8">
    <div class="form-group">
        <div class="col-sm-2">@Html.LabelFor(model => model.Category)</div>
        <div class="col-sm-10">

            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Category)
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-2">@Html.LabelFor(model => model.KeyWords)</div>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.KeyWords, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KeyWords)
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-2">@Html.LabelFor(model => model.Description)</div>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>
    <div class="form-group">

        <div class="col-sm-2">@Html.LabelFor(model=>model.Price)</div>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменения" class="btn btn-default" />
        </div>
    </div>

</div>
}

